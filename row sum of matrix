class Solution {
    public static int[] rowSum(int mat[][]) {
        if (mat == null || mat.length == 0) {
            return new int[0];
        }
        int rows = mat.length;
        int cols = mat[0].length;
        int[] result = new int[rows];
        for (int i = 0; i < rows; i++) {
            int sum = 0;
            for (int j = 0; j < cols; j++) {
                sum += mat[i][j];
            }
            result[i] = sum;
        }
        return result;
    }
}
