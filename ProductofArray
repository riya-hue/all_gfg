
class Solution {
    public static long product(long arr[]) {
        long mod = 1000000007L; // Define the modulo value
        long p = 1; // Initialize product to 1

        for (int i = 0; i < arr.length; i++) {
            p = (p * arr[i]) % mod; // Multiply and take modulo at each step
        }

        return p;
    }
}
