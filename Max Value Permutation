class Solution {
    int maxValue(int arr[]) {
        // Sort the array in ascending order using efficient sorting
        java.util.Arrays.sort(arr);
        
        long sum = 0;
        int mod = 1000000007;
        for (int i = 0; i < arr.length; i++) {
            sum = (sum + (long) arr[i] * i) % mod;
        }
        return (int) sum;
    }
}
