class Solution {
    int[] sortArray(int arr[]) {
        int n = arr.length;
        int i = 0;
        while (i < n) {
            int correctPos = arr[i] - 1;
            if (arr[i] != arr[correctPos]) {
                swap(arr, i, correctPos);
            } else {
                i++;
            }
        }
        return arr;
    }
    
    private void swap(int[] arr, int i, int j) {
        int temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }
}
