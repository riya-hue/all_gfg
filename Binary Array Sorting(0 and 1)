class Solution {
    public void binSort(int[] arr) {
        int countZero = 0;
        for (int num : arr) {
            if (num == 0) {
                countZero++;
            }
        }
        
        for (int i = 0; i < countZero; i++) {
            arr[i] = 0;
        }
        
        for (int i = countZero; i < arr.length; i++) {
            arr[i] = 1;
        }
    }
}
