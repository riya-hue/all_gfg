class Solution {
    // Function to locate the occurrence of the string x in the string s.
    int firstOccurence(String txt, String pat) {
        int n = txt.length();
        int m = pat.length();
        
        // Edge case: if pat is empty, return 0 or handle as per requirements
        if (m == 0) {
            return 0;
        }
        
        // Iterate through txt up to n - m to avoid out-of-bounds
        for (int i = 0; i <= n - m; i++) {
            // Check if substring of txt starting at i matches pat
            if (txt.substring(i, i + m).equals(pat)) {
                return i;
            }
        }
        return -1;
    }
}
